# RollScape Environment Configuration

# ======================
# Operation Mode
# ======================
# Set to 'false' to use real services (costs money)
# Set to 'true' for free development with mock services
MOCK_MODE=true

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://user:password@localhost:5432/rollscape
REDIS_URL=redis://localhost:6379/0

# ======================
# Application
# ======================
SECRET_KEY=dev-secret-key-change-in-production
ENVIRONMENT=development
DEBUG=True

# ======================
# API Configuration
# ======================
API_HOST=0.0.0.0
API_PORT=8000

# ======================
# CORS Origins (comma-separated)
# ======================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================
# OpenAI Configuration
# ======================
# Get key from: https://platform.openai.com
# OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.8
OPENAI_RATE_LIMIT_RPM=60
OPENAI_COST_LIMIT_DAILY=10.0

# ======================
# Supabase Configuration
# ======================
# Get credentials from: https://supabase.com
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key
# SUPABASE_JWT_SECRET=your-jwt-secret

# ======================
# Redis Configuration
# ======================
# For production, use Upstash Redis: https://upstash.com
# REDIS_URL=redis://default:password@redis.upstash.io:6379
REDIS_MAX_CONNECTIONS=10
REDIS_TTL_DEFAULT=3600

# ======================
# Service Switches
# ======================
# Individual service toggles (when MOCK_MODE=false)
OPENAI_ENABLED=true
SUPABASE_ENABLED=true
REDIS_ENABLED=true
WEBSOCKET_ENABLED=true

# ======================
# Legacy Service Keys (for reference)
# ======================
# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=rollscape-assets

# Pinecone
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment

# Stripe
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ======================
# Development vs Production
# ======================
# MOCK_MODE=true (default)
#   - Free development
#   - In-memory database
#   - Mock AI responses
#   - Local state management
#   - Perfect for building features
#
# MOCK_MODE=false
#   - Real AI (OpenAI API)
#   - PostgreSQL database (Supabase)
#   - Redis cache (Upstash)
#   - Production-ready
#   - Costs apply
